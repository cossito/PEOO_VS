            <TextBox x:Name="txt_2" HorizontalAlignment="Left" Margin="193,26,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"/>
            <Button Content="Inserir" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Width="104" Height="32" Click="Button_Click"/>
            <Button Content="Listar" HorizontalAlignment="Left" Margin="147,62,0,0" VerticalAlignment="Top" Width="104" Height="32" Click="Button_Click_1"/>
            <TextBox x:Name="txt_3" HorizontalAlignment="Left" Margin="10,111,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="239" Height="290" IsReadOnly="True"/>
